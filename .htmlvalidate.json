{
  "extends": [
    "htmlvalidate:recommended"
  ],

  "transform": {
    "^.*\\.html$": "html-validate-angular/html"
  },

  "rules": {
    "attribute-allowed-values": "warn",
    "element-name": "off",
    "element-required-attributes": "off",
    "no-inline-style": "warn",
    "no-raw-characters": "warn",
    "prefer-button": "warn",
    "wcag/h30": "warn",
    "wcag/h32": "off",
    "wcag/h37": "off",
    "prefer-native-element": "warn",
    "text-content": "off"
  }
}

